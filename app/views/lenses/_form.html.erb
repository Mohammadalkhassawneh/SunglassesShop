<div class="bg-dark text-white container rounded p-3">
  <%= form_with(model: lense) do |form| %>
    <% if lense.errors.any? %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <h2><%= pluralize(lense.errors.count, "error") %> prohibited this lense from being saved:</h2>
        <ul>
          <% lense.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <form>
      <div class="form-group">
        <%= form.label :colour %>
        <%= form.text_field :colour, class:'form-control', placeholder: 'enter the title'  %>
      </div>

      <div class="field">
        <%= form.label :description %>
        <%= form.text_area :description, class:'form-control', placeholder: 'enter the description'  %>
      </div>

      <div class="field">
        <%= form.label :prescription_type %>
        <%= form.text_field :prescription_type, class:'form-control', placeholder: 'enter the prespiction type'  %>
      </div>

      <div class="field">
        <%= form.label :lens_type %>
        <%= form.text_field :lens_type, class:'form-control', placeholder: 'enter the lens type'  %>
      </div>

      <div class="field">
        <%= form.label :stock %>
        <%= form.number_field :stock, class:'form-control', placeholder: 'enter the stock number'  %>
      </div>

      <div class="field">
        <%= form.label :price %>
        <%= form.text_field :price, class:'form-control', placeholder: 'enter the price'  %>
      </div>
      
      <div class="field mt-3">
          <%= form.label :currency %>
          <%= form.select :currency, ['USD', 'JOD'] %>
      </div>

      <div class="form-group row justify-content-center">
        <%= form.submit class: 'btn btn-outline-light btn-lg mt-2' %>
      </div>
    </form>
  <% end %>
</div>
