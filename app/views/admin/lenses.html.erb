<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Lense ID</th>
            <th>colour</th>
            <th>Description</th>
            <th>Prescpiction type</th>
            <th>Lense Type</th>
            <th>Stock</th>
            <th>Price</th>
            <th>User ID</th>
            <th>Created at</th>
            <th colspan="3" class="text-center">Actions</th>
        <tr>
    </thead>
    <tbody>
        <% @lenses.each_with_index do |lense, i| %>
            <tr>
                <th><%= i + 1 %></th>
                <th><%= lense.id %></th>
                <td><%= lense.colour %></td>
                <td><%= lense.description %></td>
                <td><%= lense.prescription_type %></td>
                <td><%= lense.lens_type %></td>
                <td><%= lense.stock %></td>
                <td><%= lense.price %></td>
                <td><%= lense.user_id %></td>
                <td><%= lense.created_at %></td>
                <td><%= link_to 'Show', lense, class: 'btn btn-sm btn-outline-primary text-primary' %></td>
                <td><%= link_to 'Edit', edit_lense_path(lense), class: 'btn btn-sm btn-outline-dark text-dark' %></td>
                <td><%= button_to 'Destroy', lense, method: :delete, class: 'btn btn-sm btn-outline-danger' %></td>
            </tr>
        <% end %>
    <tbody>
</table>
  <%= link_to 'Create New Lense', new_lense_path, class: 'btn btn-primary btn-lg btn-block text-white mt-3' %>