<div class="bg-dark text-white container rounded p-3">
  <%= form_with(model: frame) do |form| %>
    <% if frame.errors.any? %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <h2><%= pluralize(frame.errors.count, "error") %> prohibited this lense from being saved:</h2>
        <ul>
          <% frame.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <form>
      <div class="form-group">
        <div class="field">
          <%= form.label :name %>
          <%= form.text_field :name, class:'form-control', placeholder: 'enter the name'  %>
        </div>

        <div class="field">
          <%= form.label :description %>
          <%= form.text_area :description, class:'form-control', placeholder: 'enter the description'  %>
        </div>

        <div class="field">
          <%= form.label :status %>
          <%= form.text_field :status, class:'form-control', placeholder: 'enter the status'  %>
        </div>

        <div class="field">
          <%= form.label :stock %>
          <%= form.number_field :stock, class:'form-control', placeholder: 'enter the stock number'  %>
        </div>

        <div class="field">
          <%= form.label :price %>
          <%= form.text_field :price, class:'form-control', placeholder: 'enter the price'  %>
        </div>
        
        <div class="field mt-3">
            <%= form.label :currency %>
            <%= form.select :currency, ['USD', 'JOD'] %>
        </div>

        <div class="form-group row justify-content-center">
          <%= form.submit class: 'btn btn-outline-light btn-lg mt-2' %>
        </div>
      </div>
    </form>
  <% end %>
</div>